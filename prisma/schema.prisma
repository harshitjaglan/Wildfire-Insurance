// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String             @id @default(cuid())
  name             String?
  email            String             @unique
  emailVerified    DateTime?
  image            String?
  rooms            Room[]
  items            Item[]
  accounts         Account[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  Claim            Claim[]
  ClaimParticipant ClaimParticipant[]
  ClaimComment     ClaimComment[]
}

model Room {
  id        String   @id @default(cuid())
  name      String
  items     Item[]
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id           String      @id @default(cuid())
  name         String
  description  String?
  value        Float
  brand        String? // Added brand
  modelNumber  String? // Added model number
  serialNumber String? // Added serial number
  room         Room        @relation(fields: [roomId], references: [id])
  roomId       String
  user         User        @relation(fields: [userId], references: [id])
  userId       String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  ClaimItem    ClaimItem[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Claim {
  id           String      @id @default(cuid())
  title        String
  description  String?
  incidentDate DateTime
  status       ClaimStatus @default(DRAFT)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  // relations
  createdBy    User               @relation(fields: [createdById], references: [id])
  createdById  String
  participants ClaimParticipant[]
  items        ClaimItem[]
  comments     ClaimComment[]
}

enum ClaimStatus {
  DRAFT
  GATHERING_EVIDENCE
  SUBMITTED
  APPROVED
  REJECTED
}

model ClaimParticipant {
  id      String @id @default(cuid())
  role    Role   @default(COLLABORATOR)
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  claim   Claim  @relation(fields: [claimId], references: [id])
  claimId String

  @@unique([userId, claimId])
}

enum Role {
  OWNER
  COLLABORATOR
}

model ClaimItem {
  id      String @id @default(cuid())
  claim   Claim  @relation(fields: [claimId], references: [id])
  claimId String
  item    Item   @relation(fields: [itemId], references: [id])
  itemId  String

  @@unique([claimId, itemId])
}

model ClaimComment {
  id        String   @id @default(cuid())
  body      String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  claim     Claim    @relation(fields: [claimId], references: [id])
  claimId   String
}
